@model IEnumerable<asp.netmvc5.Models.GrantManagerModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Scripts {
@Scripts.Render("~/Scripts/jquery-1.10.2.min.js")

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/dataTables.bootstrap.js")

@Styles.Render("~/Content/dataTables.bootstrap.css")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#granttable').DataTable();
        });</script>
    }
@{
    if (Session["GrantMessage"] != null)
    {
        <div class="alert alert-success alert-dismissable">@Session["GrantMessage"]</div>
        Session["GrantMessage"] = null;
    }
}

<h2>Grants</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="granttable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grant_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grant_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grant_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grant_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
