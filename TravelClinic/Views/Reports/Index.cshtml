<ul class="nav nav-tabs">
    <li role="presentation" class="#">@Html.ActionLink("Inventory", "Index", "Vaccines")</li>
    <li role="presentation" class="#">@Html.ActionLink("CDC Data", "Index", "NDC_Lookup")</li>
    <li role="presentation" class="active">@Html.ActionLink("Reports", "Index", "Reports")</li>
   
</ul>
<br />
<h3>Vaccine Reports</h3>
<ul class="nav nav-tabs">
    <li role="presentation" class="active">@Html.ActionLink("Inventory Report", "Index", "Reports")</li>
    <li role="presentation" class="#">@Html.ActionLink("Sales Report", "Index", "Reports")</li>
    <li role="presentation" class="#">@Html.ActionLink("Custom Report", "Index", "Reports")</li>

</ul>
<br />

<table id="reports" class="table table-striped table-bordered" cellspacing="0" align="left">
    <thead>
        <tr>
            <th>
                Quantity On Hand
            </th>
            <th>
                Description
            </th>
            <th>
                NDC_Barcode
            </th>
           
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                Quantity On Hand
            </th>
            <th>
                Description
            </th>
            <th>
                NDC_Barcode
            </th>
          
        </tr>
    </tfoot>

    @foreach (var item in Model)
    {
        
        <tr>
            <td>
                @item.VaccineCount
            </td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Barcode_NDC)
            </td>
        </tr>
    }
</table>