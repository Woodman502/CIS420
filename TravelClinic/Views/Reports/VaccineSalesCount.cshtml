<ul class="nav nav-tabs">
    <li role="presentation" class="#">@Html.ActionLink("Administer Vaccines", "Index", "Patient_Vaccination")</li>
    <li role="presentation" class="#">@Html.ActionLink("Inventory", "Index", "Vaccines")</li>
    <li role="presentation" class="#">@Html.ActionLink("CDC Data", "Index", "NDC_Lookup")</li>
    <li role="presentation" class="active">@Html.ActionLink("Reports", "Index", "Reports")</li>

</ul>
<br />
<h2>Sales Count</h2>
<ul class="nav nav-tabs">
    <li role="presentation" class="#">@Html.ActionLink("Inventory", "Index", "Reports")</li>
    <li role="presentation" class="active">@Html.ActionLink("Sales Count", "VaccineSalesCount", "Reports")</li>
    <li role="presentation" class="#">@Html.ActionLink("Sales Totals", "TotalSales", "Vaccines")</li>
    <li role="presentation" class="#">@Html.ActionLink("Vaccines Sold", "Administered", "Vaccines")</li>
</ul>
<div class="container-fluid" width="60%">
    <br />
    <table id="reports" class="table table-striped table-bordered" cellspacing="0" width="60%">
        <thead>
            <tr>
                <th>
                    Quantity Sold
                </th>
                <th>
                    Description
                </th>
                <th>
                    NDC_Barcode
                </th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>
                    Quantity Sold
                </th>
                <th>
                    Description
                </th>
                <th>
                    NDC_Barcode
                </th>
            </tr>
        </tfoot>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @item.VaccineCount
                </td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Barcode_NDC)
                </td>
            </tr>
        }
    </table>
</div>