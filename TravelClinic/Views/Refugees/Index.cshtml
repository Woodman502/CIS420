@model IEnumerable<asp.netmvc5.Models.Refugee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Scripts{
@Scripts.Render("~/Scripts/jquery-1.10.2.min.js")

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/dataTables.bootstrap.js")

@Styles.Render("~/Content/dataTables.bootstrap.css")
<script type="text/javascript">
        $(document).ready(function () {
            $('#myDataTable').DataTable();
        });</script>
}
<ul class="nav nav-tabs">
    <li role="presentation" class="#">@Html.ActionLink("Employees", "Index", "Account")</li>
    <li role="presentation" class="#">@Html.ActionLink("Patients", "Index", "Account")</li>
    <li role="presentation" class="active">@Html.ActionLink("Refugees", "Index", "Refugees")</li>
</ul>

<h2>Refugee</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="myDataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Patient_BarCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_Added)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Laungage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_BarCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Added)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Laungage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RefugeeId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RefugeeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RefugeeId })
            </td>
        </tr>
    }

</table>
