@model IEnumerable<asp.netmvc5.Models.Vaccine>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Vaccines";
}

@section Scripts {
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap.js")

    @Styles.Render("~/Content/dataTables.bootstrap.css")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#vaccine').DataTable();
        });</script>

}
    <ul class="nav nav-tabs">
        <li role="presentation" class="#">@Html.ActionLink("Administer Vaccines", "Index", "Patient_Vaccination")</li>
        <li role="presentation" class="active">@Html.ActionLink("Inventory", "Index", "Vaccines")</li>
        <li role="presentation" class="#">@Html.ActionLink("CDC Data", "Index", "NDC_Lookup")</li>
        <li role="presentation" class="#">@Html.ActionLink("Reports", "Index", "Reports")</li>
    </ul>
<br />
    <h3>Vaccine Inventory</h3>
<br />
    <p>
        @Html.ActionLink("Add Vaccine Inventory", "Create")       
    </p>
    
<br />

<table id="vaccine" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NDC_Lookup.Barcode_NDC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Added)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Expire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NDC_Lookup.Barcode_NDC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Added)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Expire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Options</th>
        </tr>
    </tfoot>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NDC_Lookup.Barcode_NDC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dose)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Added)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Expire)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

</table>
