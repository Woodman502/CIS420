@model IEnumerable<asp.netmvc5.Models.Sales>

@{
    ViewBag.Title = "TotalSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewBag.Title = "Administered";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@section Scripts {
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap.js")
    @Styles.Render("~/Content/dataTables.bootstrap.css")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#vaccine').DataTable();
        });</script>
}


<ul class="nav nav-tabs">
    <li role="presentation" class="#">@Html.ActionLink("Administer Vaccines", "Index", "Patient_Vaccination")</li>
    <li role="presentation" class="#">@Html.ActionLink("Inventory", "Index", "Vaccines")</li>
    <li role="presentation" class="#">@Html.ActionLink("CDC Data", "Index", "NDC_Lookup")</li>
    <li role="presentation" class="active">@Html.ActionLink("Reports", "Index", "Reports")</li>


</ul>
<br />
<h2>Total Sales</h2>
<ul class="nav nav-tabs">
    <li role="presentation" class="#">@Html.ActionLink("Inventory", "Index", "Reports")</li>
    <li role="presentation" class="#">@Html.ActionLink("Sales Count", "VaccineSalesCount", "Reports")</li>
    <li role="presentation" class="active">@Html.ActionLink("Sales Totals", "TotalSales", "Vaccines")</li>
    <li role="presentation" class="#">@Html.ActionLink("Vaccines Sold", "Administered", "Vaccines")</li>
</ul>

<br />
<table id="vaccine" class="table table-striped table-bordered" cellspacing="0" width="40%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SumOfPrice)
            </th>
            
           
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SumOfPrice)
            </th>
           
           
        </tr>
    </tfoot>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumOfPrice)
            </td>
            
            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Description }) |
                @Html.ActionLink("Details", "Details", new { id = item.Description }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Description })
            </td>*@
        </tr>
    }
</table>

